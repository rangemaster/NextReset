<PageFunction
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    x:Class="Main.Screen.Admin.AdminPage"
    x:TypeArguments="sys:String"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="500"
    Title="AdminPage">
    <Grid>
        <StackPanel>
            <TextBox x:Name="_Input_tx" Language="Englisch" Text="" HorizontalAlignment="Center" Width="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="_Command_bn" Content="Execute" Click="_Command_bn_Click" Width="100"/>
                <Button x:Name="_Done_bn" Content="Done" Click="_Done_bn_Click" Width="100"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450">
                <TextBlock x:Name="_Feedback_tx" Text="[Feedback]"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</PageFunction>
